{% extends "base.html.twig" %}


{% block body %}




<h1>Cr√©ation du profil !</h1>

{{ form_start(formProfil) }}

<div class="form-group">
    <label for="">Titre</label>
    {{ form_widget(formProfil.title) }}
</div>

<div class="form-group">
    <label for="">Contenu</label>
    {{ form_widget(formProfil.content )}}
</div>

<div class="form-group">
    <label for="">Image</label>
    {{ form_widget(formProfil.image) }}
</div>
<br>

<button type ="submit" class="btn btn-succes">
    {% if editMode %}
        Enregistrer
    {% else %}
        Ajouter le profil
    {% endif %}
</button>

{{ form_end(formProfil) }}


{% endblock %}